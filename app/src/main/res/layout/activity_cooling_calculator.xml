<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">



        <!-- Основные параметры -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Основные параметры"
                    android:textColor="@color/purple_700"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Площадь -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/areaEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Площадь помещения, м²"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Высота -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/heightEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Высота потолка в метрах"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Освещенность помещения -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Освещенность помещения:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- RadioGroup для освещенности (3 кнопки в одном RadioGroup) -->
                <RadioGroup
                    android:id="@+id/radioGroupIllumination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <!-- Просто размещаем все 3 RadioButton вертикально -->
                    <RadioButton
                        android:id="@+id/radioIlluminationLow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Слабая" />

                    <RadioButton
                        android:id="@+id/radioIlluminationMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Средняя"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/radioIlluminationHigh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Сильная" />
                </RadioGroup>

                <!-- Количество людей -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/peopleEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Количество людей"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Уровень активности людей -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Уровень активности людей:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- RadioGroup для активности (4 кнопки в одном RadioGroup) -->
                <RadioGroup
                    android:id="@+id/radioGroupActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical">

                    <!-- Просто размещаем все 4 RadioButton вертикально -->
                    <RadioButton
                        android:id="@+id/radioActivityLow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Низкий" />

                    <RadioButton
                        android:id="@+id/radioActivityMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Средний"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/radioActivityHigh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Высокий" />

                    <RadioButton
                        android:id="@+id/radioActivityVeryHigh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Очень высокий" />
                </RadioGroup>

                <!-- Количество компьютеров -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/computersEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Количество компьютеров"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Количество телевизоров -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Количество телевизоров"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Мощность другой техники -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/otherPowerEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Мощность другой быт. техники, кВт"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Кнопки в двух строках -->
        <Button
            android:id="@+id/calculateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Рассчитать мощность охлаждения"
            android:textSize="16sp"
            android:padding="15dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_gradient"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/resetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сбросить"
            android:textSize="16sp"
            android:padding="15dp"
            android:layout_marginBottom="24dp"
            android:background="@color/purple_200"
            android:textColor="@color/white" />

        <!-- Результаты расчета (остается без изменений) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/resultCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Внутреннее содержимое  -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Результаты расчета"
                    android:textColor="@color/purple_700"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Теплопритоки -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Теплоприток от помещения:" />

                    <TextView
                        android:id="@+id/q1Result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Теплоприток от людей:" />

                    <TextView
                        android:id="@+id/q2Result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Теплоприток от техники:" />

                    <TextView
                        android:id="@+id/q3Result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700" />
                </LinearLayout>

                <!-- Общая мощность -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:padding="12dp"
                    android:background="@color/purple_50">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Общая мощность охлаждения:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/coolingPower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textStyle="bold"
                        android:textColor="@color/красный"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- Рекомендуемый диапазон -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Рекоменд. диапазон:" />

                    <TextView
                        android:id="@+id/coolingRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700" />
                </LinearLayout>

                <!-- BTU -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Мощность в BTU"
                    android:textColor="@color/purple_700"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Мощность в BTU:" />

                    <TextView
                        android:id="@+id/btuPower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Рекомендуемая модель:" />

                    <TextView
                        android:id="@+id/btuModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700" />
                </LinearLayout>

                <!-- Рекомендации -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:background="@color/purple_50">

                <!-- Заголовок "Рекомендации" -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Рекомендации:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/purple_700"
                    android:layout_marginBottom="8dp" />

                <!-- Сама рекомендация -->
                <TextView
                    android:id="@+id/splitSystem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="18sp"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/голубой" />

            </LinearLayout>




            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>