<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Поиск кодов ошибок сплит-систем"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Введите код ошибки (E1, P4, F0, H1)"
                android:inputType="text"
                android:padding="12dp"
                android:background="@android:color/white"
                android:elevation="2dp" />

            <Button
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Найти"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_gradient"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Кнопки брендов - компактный вариант -->
        <TextView
            android:id="@+id/textViewBrandsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Бренды:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/linearLayoutBrands"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Первая строка кнопок -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/filterEk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EK"
                    android:layout_marginEnd="4dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:textSize="15sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:background="@drawable/button_brand_background"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/filterAeronik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aeronik"
                    android:layout_marginEnd="4dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:textSize="15sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:background="@drawable/button_brand_background"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/filterBallu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ballu"
                    android:layout_marginEnd="4dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:textSize="15sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:background="@drawable/button_brand_background"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/filterCarrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carrier"
                    android:layout_marginEnd="4dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:textSize="15sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:background="@drawable/button_brand_background"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Вторая строка кнопок -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/filterCooperHunter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CooperHunter"
                    android:layout_marginEnd="4dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:background="@drawable/button_brand_background"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/filterDaikin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daikin"
                    android:layout_marginEnd="4dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:background="@drawable/button_brand_background"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/filterGree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gree"
                    android:layout_marginEnd="4dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:background="@drawable/button_brand_background"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Третья строка кнопок -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp">

                <Button
                    android:id="@+id/filterSanyo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sanyo"
                    android:layout_marginEnd="4dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:background="@drawable/button_brand_background"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/filterTcl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TCL"
                    android:layout_marginEnd="4dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:background="@drawable/button_brand_background"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/filterLg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LG"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:background="@drawable/button_brand_background"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/clearButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Очистить"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:background="@color/purple_100" />

        <!-- Контейнер результатов (изначально скрыт) -->
        <LinearLayout
            android:id="@+id/resultsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/resultsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Результаты поиска"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/resultCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Найдено ошибок: 0"
                android:textSize="14sp"
                android:textColor="@color/синий"
                android:layout_marginBottom="16dp" />

            <!-- Сообщение "нет результатов" -->
            <TextView
                android:id="@+id/noResults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="По вашему запросу ничего не найдено проверти корекность веденных данных "
                android:textSize="20sp"
                android:textColor="@color/красный"
                android:layout_gravity="center_horizontal"
                android:padding="32dp"
                android:visibility="gone" />

            <!-- RecyclerView для результатов -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/resultsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- Контейнер для загрузки дополнительных элементов -->
            <LinearLayout
                android:id="@+id/loadMoreContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/buttonLoadMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Загрузить еще"
                    android:padding="12dp"
                    android:background="@drawable/button_gradient"
                    android:textColor="@android:color/white" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>